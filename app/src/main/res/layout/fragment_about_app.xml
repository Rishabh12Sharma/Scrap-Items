<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/imgScrapLogoHomePage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/scrap_logo"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#065535"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell your recyclables online with Scrap Items"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/green"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paper - Plastics - Metals - Appliances"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can also download the Scrap Items App"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="40dp"
            android:src="@drawable/scrap_items"
            android:background="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_it_works"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/how_it_works"
            android:layout_margin="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Households and Businesses have different needs and we cater to each of them"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Households"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ On-Demand Doorstep Pickups"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Accurate Digital Weighing"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Safety (Trained and Verified Staff)"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For Business"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:textSize="20sp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Formal Payments and Documentation"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Sustainability Reports"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="20sp"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Competitive Prices"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="20sp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>